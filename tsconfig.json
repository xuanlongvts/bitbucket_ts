{
	"compilerOptions": {
		"target": "es2020",
		"module": "commonjs",
		"strict": true,

		"esModuleInterop": true,
		"strictNullChecks": true,

		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./out/",
		"rootDir": "./src"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
